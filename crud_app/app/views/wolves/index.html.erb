<p id="notice"><%= notice %></p>

<h1>Wolves</h1>

<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>Size</th>
      <th>Color</th>
      <th>Leader</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wolves.each do |wolf| %>
      <tr>
        <td><%= wolf.gender %></td>
        <td><%= wolf.size %></td>
        <td><%= wolf.color %></td>
        <td><%= wolf.leader %></td>
        <td><%= link_to 'Show', wolf %></td>
        <td><%= link_to 'Edit', edit_wolf_path(wolf) %></td>
        <td><%= link_to 'Destroy', wolf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

