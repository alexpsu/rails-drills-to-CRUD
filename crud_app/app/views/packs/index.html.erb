<p id="notice"><%= notice %></p>

<h1>Wolf Packs</h1>

    <% @packs.each do |pack| %>
    <br>
      <div class="pack">
        <h2><%= pack.state %></h2>
        <h4><%= pack.size %></h4>
        <img src="<%= pack.family_pic %>" class="img"><br>
        <button class="btn-primary"><%= link_to 'Pack', pack %></button>
        <span><%= link_to 'Edit Pack', edit_pack_path(pack) %></span>
        <span><%= link_to 'Delete Pack', pack, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        <span><%= link_to 'Add a New Wolf', new_wolf_path %></span>
      </div>
      <br>  
    <% end %>

<br>

<%= link_to 'New Pack', new_pack_path %>
